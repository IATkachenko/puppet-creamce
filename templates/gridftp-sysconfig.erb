<%if @gridftp_configfile.to_s!='' -%>conf=<%= @gridftp_configfile %><% end -%>

<%if @gridftp_configdir.to_s!='' -%>confdir=<%= @gridftp_configdir %><% end -%>

<%if @gridftp_thread_model.to_s!='' -%>export GLOBUS_THREAD_MODEL="<%= @gridftp_thread_model %>"<% end -%>

export GLOBUS_GSSAPI_FORCE_TLS=<%= @gridftp_force_tls %>

<%if @globus_tcp_port_range.to_s!='' -%>export GLOBUS_TCP_PORT_RANGE="<%=@globus_tcp_port_range%>"<% end -%>
<%if @globus_udp_port_range.to_s!='' -%>export GLOBUS_UDP_PORT_RANGE="<%=@globus_udp_port_range%>"<% end -%>

export LCMAPS_LOG_LEVEL="<%=@lcmaps_log_level-%>"
export LCMAPS_DEBUG_LEVEL="<%=@lcmaps_debug_level-%>"
export LCAS_LOG_LEVEL="<%=@lcas_log_level-%>"
export LCAS_DEBUG_LEVEL="<%=@lcas_debug_level-%>"

<% @gridftp_extra_vars.each do | envName, envValue | -%>
export <%=envName%>="<%=envValue%>"
<% end -%>

