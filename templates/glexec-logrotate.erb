/var/log/glexec/glexec_log {
  rotate <%=@glexec_rotate_size%>
  size = <%=@glexec_rotate_num%>
  copytruncate
  compress
  delaycompress
  missingok
}

/var/log/glexec/lcas_lcmaps.log {
  rotate <%=@lcmaps_rotate_num%>
  size = <%=@lcmaps_rotate_size%>
  copytruncate
  compress
  delaycompress
  missingok
}
