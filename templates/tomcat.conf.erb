# do not edit
###############################################################################
<% if defined? @javaversion
 java_version=@javaversion
else 
 java_version="/usr/lib/jvm/jre-1.7.0-oracle.x86_64/bin/java"
end
-%>
<% if @tomcat == "tomcat6" %>
CATALINA_BASE="/usr/share/tomcat6"
CATALINA_HOME="/usr/share/tomcat6"
JASPER_HOME="/usr/share/tomcat6"
CATALINA_TMPDIR="/var/cache/tomcat6/temp"
TOMCAT_USER="tomcat"
SHUTDOWN_WAIT="30"
SHUTDOWN_VERBOSE=false
CATALINA_PID="/var/run/tomcat6.pid"
JAVA_HOME=<%=java_version%>
<% else %>
TOMCAT_CFG_LOADED="1"
TOMCATS_BASE="/var/lib/tomcats/"
JAVA_HOME=<%=java_version%>
CATALINA_HOME="/usr/share/tomcat"
CATALINA_TMPDIR="/var/cache/tomcat/temp"
<% end %>
JAVA_OPTS="-server <%=@java_opts-%> -Djavax.sql.DataSource.Factory=org.apache.commons.dbcp.BasicDataSourceFactory"
SECURITY_MANAGER="false"

